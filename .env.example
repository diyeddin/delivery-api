# Environment Configuration Template
# Copy this file to .env and update the values

# URLs (Internal Docker Network)
# Note: These are constructed dynamically in docker-compose, 
# but you might need them for local testing.
DATABASE_URL=postgresql+asyncpg://mall_admin:ChangeThisToSomethingStrong2026!@localhost:5432/mall_delivery_prod
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=replace-this-with-a-real-secret-key-32-chars-minimum
DEBUG=true
ENVIRONMENT=development
ALGORITHM=HS256

# Logging
LOG_LEVEL=INFO

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings (for development)
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Database Credentials
POSTGRES_USER=mall_admin
POSTGRES_PASSWORD=ChangeThisToSomethingStrong2026!
POSTGRES_DB=mall_delivery_prod
